<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to (raw t("layouts.app_name")), "#", id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to (raw t("layouts.home")), root_path %></li>
          <li><%= link_to (raw t("layouts.help")), help_path %></li>
          <% if logged_in? %>
            <li><%= link_to (raw t("user")), '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (raw t("profile")), current_user %></li>
                <li><%= link_to (raw t("setting")), '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to (raw t("logout")), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to (raw t("layouts.login")), "#" %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>
